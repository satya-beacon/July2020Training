@model List<UsermanagementApp.Entity.UserProfile>
    <div class="container">
        <h3>All User Profiles</h3>

        <form class="form-inline mt-2 mt-md-0" id="frmSearch" name="searchForm" method="get" action="~/Account/ViewAll">
            <input id="txtSearch" name="searchString" class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
            <button class="btn btn-success my-2 my-sm-0" type="submit">Search</button>
        </form>
        <br />
        <table class="table table-hover table-striped">
            <thead class="thead-light">
                <tr>
                    <th>Id</th>
                    <th>Username</th>
                    <th>FirstName</th>
                    <th>LastName</th>
                    <th>Email</th>
                    <th>Action</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Username</td>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Email</td>
                        <td>
                            <a href="~/Account/ProfileView/@item.Id">View Profile</a>&nbsp;&nbsp;
                            <a href="~/Account/EditProfile/@item.Id">Edit</a>
                        </td>
                    </tr>
                }

            </tbody>

            @if (Model.Count == 0)
            {
                <tfoot>
                    <tr>
                        <td colspan="6" class="text-center">No Records found</td>
                    </tr>
                </tfoot>
            }

        </table>
    </div>